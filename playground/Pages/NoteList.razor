@page "/list"

@using playground.Pages;
@using playground.Data;

<div>
    <h2>A Note test</h2>
</div>

<div>
    <ul>
        @foreach (var note in Notes)
        {
           <NoteView note="@note" OnUpdateNote="@((e) => OnUpdateNote(e, note))"></NoteView>
        }
    </ul>
</div>

@code {
    public IList<Note> Notes { get; set; } = new List<Note>() { new Note() { Id = 1 } };
        protected void OnUpdateNote(MouseEventArgs e, Note note)
        {

            note.Message = string.Format("Updated {0}.", note.Id);
            note.Style = "caret-down";
        }
}